                                <th style="color: cornsilk; background-color: #3a8bcd;">
                                    Amount
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <p style="color:black;">@Html.DisplayFor(modelItem => item.Name)</p>
                                    </td>
                                    <td>
                                        <input type="checkbox" class="ckitem" name="ID"
                                               value="@item.Productid" />
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <label style="color:black;" class="control-label">amount</label>
