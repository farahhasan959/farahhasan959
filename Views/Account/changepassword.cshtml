@model RightProject.Models.ShopManager
<div>
    <div>
        <link href="~/css/chpas.css" rel="stylesheet" />
        <div class="text-danger">
            @RightProject.Controllers.Account.Message
        </div>
        <div class="text-success">
            @RightProject.Controllers.Account.SuccessMsg
        </div>


        <form asp-action="VerifyPassword" class="modal-content animate" style="width:300px;height:400px;background-color:ghostwhite; ">


            <div style="margin-top: 47px;" class="container">
                <!--<label for="uname"><b>Username</b></label>
            <input type="text" placeholder="Enter Username" name="uname" required>-->

                <label style="color:#808080;font-size: 17px; margin-bottom:50px;" class="heading" for="pass"><b>Enter Old Password</b></label>
                <input type="password" placeholder="Enter Password" name="pass" required class="form-control input-text" style="color: #808080; font-size: 13px; margin: 10px 16px; height: 30px;width:87%;">

                <button style="background-color: #3a8bcd; width: 86%; margin-left: 18px; height: 37px; padding: 0; " type="submit" class="btn"> continue </button>

            </div>


        </form>
        <div id="id04" class="modal">
            <span onclick="document.getElementById('id04').style.display='none'"
                  class="close" title="Close Modal">&times;</span>

            <form asp-action="Change" class="modal-content animate" style="width:300px;height:400px;background-color:ghostwhite; ">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-danger">
                    @ViewBag.msg
                </div>



                <div class="form-group">
                    <label style="color:#808080;font-size: 17px; margin:-5px 5px;" class="heading">password</label>
                    <input style="color: #808080; font-size: 13px; margin: 10px 16px; height: 30px;width:87%;" class="form-control input-text" placeholder="new pass" type="password" name="pass" required />

                </div>
                <div class="form-group">
                    <label style="color:#808080;font-size: 17px; margin:-5px 5px;" class="heading">Confirm password</label>
                    <input style="color: #808080; font-size: 13px; margin: 10px 16px; height: 30px;width:87%;" class="form-control input-text" type="password" placeholder="confirm pass" name="passconfirm" required />

                </div>

                <div class="form-group">
                    <input style="background-color: #3a8bcd; width: 86%; margin-left: 18px; height: 37px; padding: 0; " type="submit" value="change password" class="btn btn-primary" />
                </div>
            </form>
            </div>

        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        var model = document.getElementById('id04');
        window.onclick = function (event) {
            if (event.target == model) {
                model.style.display = "none";

            }
        }
    </script>
}
